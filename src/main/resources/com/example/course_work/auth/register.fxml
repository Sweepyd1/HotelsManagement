<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="400.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.example.course_work.auth.RegisterController">
    <children>
        <VBox alignment="CENTER" spacing="10.0" style="-fx-background-color: #2a2b3f;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <Text style="-fx-font-size: 24px; -fx-fill: white; -fx-font-weight: bold;" text="Registration" />  
            <TextField fx:id="loginField" promptText="login" style="-fx-text-fill: white; -fx-background-color: #39364f; -fx-padding: 10;" />
            <TextField fx:id="surnameField" promptText="surname" style="-fx-text-fill: white; -fx-background-color: #39364f; -fx-padding: 10;" />
            <TextField fx:id="nameField" promptText="name" style="-fx-text-fill: white; -fx-background-color: #39364f; -fx-padding: 10;" />
            <PasswordField fx:id="passwordField" promptText="Password" style="-fx-text-fill: white; -fx-background-color: #39364f; -fx-padding: 10;" />
            <Button onAction="#createUser" prefHeight="38.0" prefWidth="135.0" style="-fx-background-color: #9ea5db; -fx-padding: 10;" text="Register" textFill="WHITE" />
            <Text fx:id="authorization" style="-fx-font-size: 10px; -fx-fill: white; -fx-font-weight: bold;" text="есть аккаунт? авторизация" /> 
        </VBox>
    </children>
</AnchorPane>
