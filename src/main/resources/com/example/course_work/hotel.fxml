<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.image.ImageView?>

<VBox xmlns:fx="http://javafx.com/fxml" spacing="20" fx:controller="com.example.course_work.RoomCartController"
      style="-fx-background-color: #39364f; -fx-padding: 20; -fx-pref-width: 450; -fx-max-width: 450; -fx-min-width: 350; -fx-border-radius: 10;">

        <HBox alignment="CENTER" spacing="10"> <!-- HBox для изображения и кнопки -->
                <ImageView fx:id="roomImageView" fitWidth="200" fitHeight="150" preserveRatio="true" />
                <VBox spacing="10"> <!-- VBox для описания -->
                        <Label fx:id="titleLabel" style="-fx-font-size: 16px; -fx-text-fill: #FFFFFF;" />
                        <Label fx:id="descriptionLabel" style="-fx-font-size: 14px; -fx-text-fill: #FFFFFF;" />
                        <Label fx:id="countLabel" style="-fx-font-size: 14px; -fx-text-fill: #FFFFFF;" />
                        <Button fx:id="addToCartButton" text="Бронировать" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
                </VBox>

        </HBox>

</VBox>